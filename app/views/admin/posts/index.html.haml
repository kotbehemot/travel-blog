%table
  %thead
    %tr
      %th{:colspan => 2}= link_to 'New Post', new_admin_post_path, :class => 'btn btn-blue'
      %th{:colspan => 3}= paginate @posts
    %tr
      %th Title
      %th Place
      %th Summary
      %th Views
      %th.actions &nbsp;
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.place.try(:name)
        %td.summary= post.summary
        %td
          - if post.published?
            %span.fa.fa-eye{:title => post.published_at}
          - else
            %span.fa.fa-eye-slash
          = post.impressionist_count
        %td.actions
          = link_to 'Edit', [:admin, post], :class => 'btn btn-smaller'
          = link_to 'View', post, :class => 'btn btn-smaller'
  %tfoot
    %tr
      %th{:colspan => 2}= link_to 'New Post', new_admin_post_path, :class => 'btn btn-blue'
      %th{:colspan => 3}= paginate @posts
