%table#admin-locations
  %thead
    %tr
      %th{:colspan => 2}= link_to 'New Location', new_admin_location_path, :class => 'btn btn-blue'

      %th{:colspan => 3}= paginate @locations
    %tr
      %th Lat
      %th Lon
      %th Date
      %th Vehicle
      %th.actions &nbsp;
  %tbody
    - @locations.each do |location|
      %tr
        %td= location.lat.round(6)
        %td= location.lon.round(6)
        %td= location.emailed_at.to_s(:short)
        %td= location.vehicle_name
        %td.actions
          = link_to 'Edit', [:admin, location], :class => 'btn btn-smaller'
          = link_to 'Destroy', [:admin, location], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-smaller btn-red'

  %tfoot
    %tr
      %th{:colspan => 2}= link_to 'New Location', new_admin_location_path, :class => 'btn btn-blue'
      %th{:colspan => 3}= paginate @locations

