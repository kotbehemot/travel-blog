!!!
%html{:lang => t('app_language')}
  %head
    %title= page_title
    %meta{:charset => "UTF-8" }
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:rel => 'shortcut icon', :href => '/favicon.png'}
    %link{:href => url_for(:host => ENV["CANONICAL_HOST"] || request.host, :only_path => false), :rel => "canonical"}

    %meta{:name => 'keywords', :content => t('head.keywords')}
    %meta{:name => 'description', :content => @description || t('head.description')}
    %meta{:property => "og:title", :content => @title || t('app_name')}
    %meta{:property => "og:description", :content => @description || t('head.description')}

    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
  %body
    = render 'shared/fb_app'
    = render 'shared/navigation'
    = yield
    = javascript_include_tag "application"
    = render 'shared/ga' if Rails.env.production?
    = javascript_include_tag "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry"
    = javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"

